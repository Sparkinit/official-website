{
  "name": "official-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "bunx --bun astro dev --host",
    "build": "bunx --bun astro build",
    "preview": "bunx --bun astro preview",
    "astro": "bunx --bun astro",
    "deploy": "fly deploy",
    "format": "bunx prettier '**/*.{js,ts,tsx,astro,json,css}' --write",
    "auth:generate": "bunx @better-auth/cli generate",
    "auth:migrate": "bunx @better-auth/cli migrate",
    "db:generate": "bun drizzle-kit generate",
    "db:migrate": "bun drizzle-kit migrate",
    "db:push": "bun drizzle-kit push",
    "submodule:init": "git submodule update --init --recursive",
    "submodule:update": "git submodule update --remote --merge",
    "submodule:pull": "git pull origin main --recurse-submodules",
    "submodule:push": "git push --recurse-submodules=on-demand"
  },
  "dependencies": {
    "@astrojs/node": "9.4.4",
    "@astrojs/react": "4.4.0",
    "@better-auth/cli": "^1.3.18",
    "@dotenvx/dotenvx": "^1.51.0",
    "@fontsource/funnel-display": "^5.2.8",
    "@marsidev/react-turnstile": "^1.3.1",
    "@nanostores/react": "^1.0.0",
    "@neondatabase/serverless": "^1.0.1",
    "@react-email/components": "^0.5.5",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/react-form": "^1.23.4",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "astro": "5.14.1",
    "better-auth": "^1.3.18",
    "drizzle-orm": "^0.44.5",
    "elysia": "^1.4.8",
    "nanostores": "^1.0.1",
    "ogl": "^1.0.11",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "resend": "^6.1.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@types/bun": "^1.2.23",
    "drizzle-kit": "^0.31.5",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rolldown-vite": "latest"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  }
}
