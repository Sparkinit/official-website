{
  "name": "official-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "bunx --bun astro dev",
    "build": "bunx --bun astro build",
    "preview": "bunx --bun astro preview",
    "astro": "bunx --bun astro",
    "deploy": "fly deploy",
    "format": "bunx prettier '**/*.{js,ts,tsx,astro,json,css}' --write",
    "auth:generate": "bunx @better-auth/cli generate",
    "auth:migrate": "bunx @better-auth/cli migrate",
    "db:generate": "bun drizzle-kit generate",
    "db:migrate": "bun drizzle-kit migrate",
    "db:push": "bun drizzle-kit push",
    "submodule:init": "git submodule update --init --recursive",
    "submodule:update": "git submodule update --remote --merge",
    "submodule:pull": "git pull origin main --recurse-submodules",
    "submodule:push": "git push --recurse-submodules=on-demand"
  },
  "dependencies": {
    "@astrojs/node": "^9.4.3",
    "@astrojs/react": "^4.3.0",
    "@better-auth/cli": "^1.3.7",
    "@dotenvx/dotenvx": "^1.49.0",
    "@nanostores/react": "^1.0.0",
    "@neondatabase/serverless": "^1.0.1",
    "@react-email/components": "^0.5.1",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-form": "^1.19.2",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "astro": "^5.13.3",
    "better-auth": "^1.3.7",
    "drizzle-orm": "^0.44.5",
    "elysia": "^1.3.20",
    "nanostores": "^1.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "resend": "^6.0.1",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@types/bun": "^1.2.20",
    "drizzle-kit": "^0.31.4",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}
